    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Unit Tests",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/test/build/all_RFboard_tests",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}/test/build/",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            }
        ],
        "preLaunchTask": "Run Unit Tests",
        "miDebuggerPath": "/usr/bin/gdb"  // or lldb on macOS
        }
    ]
}